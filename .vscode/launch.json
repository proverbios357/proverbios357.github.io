{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "Run servers",
		"type": "node",
		"request": "launch",
		"args": [
		  "Server.ts"
		],
		"runtimeArgs": [
		  "--no-experimental-fetch",
		  "--loader",
		  "ts-node/esm"
		],
		"cwd": "${workspaceRoot}/server",
		"program": "${input:chooseFile}",
		"internalConsoleOptions": "openOnSessionStart"
	  },
	  {
		"name": "Test with Bun (fails on loading Sharp)",
		"type": "bun",
		"args": [],
		"request": "launch",
		"cwd": "${workspaceRoot}/server",
		"program": "${fileBasenameNoExtension}.test.ts",
		"stopOnEntry": false,
		"internalConsoleOptions": "openOnSessionStart"
	  },
	  {
		"name": "Build",
		"type": "node",
		"args": [
		  "run",
		  "build"
		],
		"request": "launch",
		"runtimeExecutable": "bun",
		  "cwd": "${workspaceRoot}"
	  },
	  {
		"name": "Test Program",
		"type": "bun",
		"args": ["test"],
		"request": "launch",
		"program": "test/*.spec.ts",
		"cwd": "${workspaceRoot}/server",
		"stopOnEntry": false,
		"internalConsoleOptions": "openOnSessionStart" 
	  }
	],
	"inputs": [
		{
		  "id": "chooseFile",
		  "type": "command",
		  "command": "extension.commandvariable.file.fileAsKey",
		  "args": {
			"test.ts": "${file}",
			"@default": "Server.ts"
		  }
		}
	]
}